<Scene name="Namespace invaders">
    <Fonts>
        <Font id="arial" path="consola.ttf" />
    </Fonts>
    <Textures>
        <Texture id="cpp-ship-tex" path="ship_cpp.png" />
    </Textures>
    <Assets>
        <Box id="cpp-ship">
            <Group>
                <Sprite texture="cpp-ship-tex" />
                <Box posX="0.4" posY="0.4" width="0.01">
                    <RibbonParticle r="1.0" g="1.0" b="0.0" />
                </Box>
                <Box posX="0.6" posY="0.4" width="0.01">
                    <RibbonParticle r="1.0" g="1.0" b="0.0" />
                </Box>
            </Group>
        </Box>
        <Box id="cpp-invader">
            <Group>
                <Sprite texture="cpp-ship-tex" />
                <Box posX="0.4" posY="0.4" width="0.01">
                    <RibbonParticle r="1.0" g="1.0" b="0.0" />
                </Box>
                <Box posX="0.6" posY="0.4" width="0.01">
                    <RibbonParticle r="1.0" g="1.0" b="0.0" />
                </Box>
            </Group>
        </Box>
        <Box id="cpp-projectile">
            <Group>
                <Sprite texture="cpp-ship-tex" />
                <Box posX="0.45" width="0.1">
                    <RibbonParticle r="0.0" g="1.0" b="1.0" />
                </Box>
            </Group>
        </Box>
        <Box id="framecounter" width="0.5" height="0.5" >
            <Framecounter font="arial" r="1.0" g="0.0" b="0.0" />
        </Box>
        <Box id="namespace-invaders" width="0.6" height="0.6" posY="0.1" posX="0.2">
            <Text text="namespace::invaders" font="arial" r="1.0" g="1.0" b="1.0" />
        </Box>
        <Box id="victory" width="0.4" height="0.4" posY="0.4" posX="0.3">
            <Text text="You win!" font="arial" r="1.0" g="1.0" b="1.0" />
        </Box>
        <Box id="loss" width="0.4" height="0.4" posY="0.4" posX="0.3">
            <Text text="You died :/" font="arial" r="1.0" g="1.0" b="1.0" />
        </Box>
    </Assets>
    <Player mass="200" radius="0.025" health="20" asset="cpp-ship" accel="0.2" velY="-0.05" fireInterval="0.2">
        <Projectile mass="10" radius="0.01275" velX="0.2" velY="0.2" asset="cpp-projectile" />
    </Player>
    <Background>
        <Asset asset="framecounter" />
    </Background>
    <Timeline>
        <Deadline duration="2.0">
            <Show asset="namespace-invaders" />
        </Deadline>
        <Condition predicate="player.alive">
            <Then>
                <Timeline>
                    <Wave rows="3" columns="2">
                        <Ship mass="200" radius="0.025" health="5" velX="1.0" velY="0.1" fireIntervalDeviation="0.2" asset="cpp-invader" />
                        <Projectile mass="10" radius="0.01275" velX="0.2" velY="0.2" asset="cpp-projectile" />
                    </Wave>
                    <Wave rows="1" columns="3">
                        <Ship mass="200" radius="0.025" health="5" velX="0.5" velY="0.1" fireIntervalDeviation="0.2" asset="cpp-invader" />
                        <Projectile mass="10" radius="0.01275" velX="0.2" velY="0.2" asset="cpp-projectile" />
                    </Wave>
                    <Permanent>
                        <Show asset="victory" />
                    </Permanent>
                </Timeline>
            </Then>
            <Else>
                <Show asset="loss" />
            </Else>
        </Condition>
    </Timeline>
</Scene>
