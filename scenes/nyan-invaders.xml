<Scene name="Nyan invaders">
    <Fonts>
        <Font id="arial" path="consola.ttf" />
    </Fonts>
    <Textures>
        <Texture id="nyan-ship-tex" path="nyan_cat.png" />
        <Texture id="nyan-projectile-tex" path="nyan_projectile.png" />
    </Textures>
    <Music>
        <Music id="nyan-music" path="nyan_music.ogg" />
    </Music>
    <Assets>
        <Box id="nyan-ship">
            <Group>
                <AnimatedSprite texture="nyan-ship-tex" frameCount="2" />
                <Box posX="0.2" posY="0.4" width="0.004">
                    <RibbonParticle r="1.0" g="0.0" b="0.0" />
                </Box>
                <Box posX="0.3" posY="0.4" width="0.004">
                    <RibbonParticle r="1.0" g="0.5" b="0.0" />
                </Box>
                <Box posX="0.4" posY="0.4" width="0.004">
                    <RibbonParticle r="1.0" g="1.0" b="0.0" />
                </Box>
                <Box posX="0.5" posY="0.4" width="0.004">
                    <RibbonParticle r="0.0" g="1.0" b="0.0" />
                </Box>
                <Box posX="0.6" posY="0.4" width="0.004">
                    <RibbonParticle r="0.0" g="0.75" b="0.75" />
                </Box>
                <Box posX="0.7" posY="0.4" width="0.004">
                    <RibbonParticle r="0.5" g="0.0" b="1.0" />
                </Box>
            </Group>
        </Box>
        <Box id="nyan-projectile">
            <Group>
                <Sprite texture="nyan-projectile-tex" />
                <Box posX="0.45" width="0.1">
                    <RibbonParticle r="0.9" g="0.3" b="0.5" />
                </Box>
            </Group>
        </Box>
        <Box id="framecounter" width="0.5" height="0.5" >
            <Framecounter font="arial" r="1.0" g="0.0" b="0.0" />
        </Box>
        <Box id="nyan-invaders" width="0.6" height="0.6" posY="0.1" posX="0.2">
            <Text text="Nyan invaders" font="arial" r="1.0" g="1.0" b="1.0" />
        </Box>
        <ParticleEmitter id="ray-burst" interval="0.02" lifetime="0.5" speed="0.1">
            <Box width="0.005" height="0.005" >
                <RibbonParticle r="0.0" g="1.0" b="0.0" />
            </Box>
        </ParticleEmitter>
        <ParticleEmitter id="ray-burst-model" interval="0.1" lifetime="0.5" speed="2.0">
            <Box width="0.1" height="0.1" >
                <RibbonParticle r="0.5" g="0.0" b="0.5" />
            </Box>
        </ParticleEmitter>
        <ParticleEmitter id="explosion" interval="0.1" lifetime="0.5" speed="0.05">
            <Box width="0.05" height="0.05" >
                <Sprite texture="nyan-ship-tex" />
            </Box>
        </ParticleEmitter>
    </Assets>
    <Player mass="200" radius="0.025" health="20" asset="nyan-ship" accel="0.2" velY="-0.05" fireInterval="0.2">
        <DestroyedEffect asset="explosion" duration="5.0" />
        <Projectile mass="10" radius="0.005" velX="0.2" velY="0.2" asset="nyan-projectile" />
    </Player>
    <Background>
        <Asset asset="framecounter" />
    </Background>
    <Decor>

    </Decor>
    <Timeline>
        <Deadline duration="2.0">
            <Show asset="nyan-invaders" />
        </Deadline>
        <Music music="nyan-music" />
    </Timeline>
</Scene>
